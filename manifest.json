{
  "manifest_version": 3,
  "name": "Conta Parole Live",
  "version": "2.0",
  "description": "Mostra il numero di parole direttamente nel menu contestuale.",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}